@if (TempData.ContainsKey("message"))
{
    <h3 class="alert alert-info" role="alert">@ViewBag.Message</h3>
}

<h2>Pagina de bord</h2>


@foreach (OpenDiscussionPlatform.Models.ForumPost forumPost in ViewBag.ForumPosts)
{
    <div class="panel panel-forumpost">
        @Html.Partial("ForumPostInfo", forumPost)
        <div class="panel-footer">
            <a class="btn btn-sm btn-success full-width" href="/ForumPosts/Show/@forumPost.Id">Afisare postare</a>
        </div>
    </div>
    <br />

}

<div>
    <nav aria-label="Page navigation">
        <ul class="pagination">
            <li>
                <a href="/ForumPosts/Index?page=1" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                </a>
            </li>

            @for (int i = 1; i <= ViewBag.lastPage; i++)
            {
                <li><a href="/ForumPosts/Index?page=@i">@(i)</a></li>
            }

            <li>
                <a href="/ForumPosts/Index?page=@(ViewBag.lastPage)" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                </a>
            </li>
        </ul>
    </nav>
</div>


